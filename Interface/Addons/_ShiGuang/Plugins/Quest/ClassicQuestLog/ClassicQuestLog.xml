			<Button parentKey="abandonButton" inherits="MagicButtonTemplate" text="ABANDON_QUEST_ABBREV">
				<Size x="108" y="22"/>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="4" y="4"/>
				</Anchors>
