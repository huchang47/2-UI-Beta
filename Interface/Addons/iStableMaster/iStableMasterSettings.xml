							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parentText" relativePoint="BOTTOMLEFT">
									<Offset y="-10" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						self.label = getglobal(self:GetName() .. "Text");
						self.label:SetText("Checkbox 2 label");

						--self.helpText = getglobal(self:GetName() .. "HelpText");
						--self.helpText:SetText("Show reputation while leveling");
					</OnLoad>
					<OnClick function="">
					</OnClick>
				</Scripts>
			</CheckButton>
		</Frames>
		<Layers>
			<Layer>
