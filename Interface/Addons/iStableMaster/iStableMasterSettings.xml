					<Anchor point="TOPLEFT" relativeTo="$parentLabel1" relativePoint="BOTTOMLEFT">
						<Offset x="15" y="-8" />
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentHelpText" inherits="GameFontWhite" text="Checkbox 1 description" justifyV="TOP" justifyH="LEFT">
							<Size>
								<AbsDimension x="500" y="80" />
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parentText" relativePoint="BOTTOMLEFT">
									<Offset y="-10" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						self.label = getglobal(self:GetName() .. "Text");
						self.label:SetText("Checkbox 1 label");

						--self.helpText = getglobal(self:GetName() .. "HelpText");
						--self.helpText:SetText("Stance Bar Visible");
					</OnLoad>
					<OnClick function="">
					</OnClick>
				</Scripts>
			</CheckButton>
		</Frames>
			<Layers>
				<Layer>
					<FontString name="$parentLabel1_2" inherits="GameFontNormal" text="OPTION 1.2">
