							<Anchor point="TOPLEFT" relativeTo="$parentCheckbox1HelpText" relativePoint="BOTTOMLEFT">
								<Offset x="-35" y="-60" />
							</Anchor>
						</Anchors>
					</FontString>
				</Layer>
			</Layers>
			<Frames>
			<CheckButton name="$parentCheckbox2" inherits="OptionsCheckButtonTemplate" text="Checkbox 2">
