	<Script file="StablesCollection.lua" />
	<Button name="CollectionsJournalTab" inherits="CharacterFrameTabButtonTemplate" virtual="true">
		<Scripts>
			<OnClick>
				StablesCollectionsJournal_SetTab(CollectionsJournal,self:GetID());
				PlaySound(SOUNDKIT.UI_TOYBOX_TABS);
				StablesCollection_Hide();
			</OnClick>
		</Scripts>
	</Button>
	<Button name="CollectionsJournalStablesTab" inherits="CharacterFrameTabButtonTemplate" virtual="true">
		<Scripts>
			<OnClick>
				StablesCollectionsJournal_SetTab(self:GetParent(),self:GetID());
				PlaySound(SOUNDKIT.UI_TOYBOX_TABS);
				StablesCollection_Show();
			</OnClick>
		</Scripts>
	</Button>
	<Frame name="CollectionsJournal" inherits="PortraitFrameTemplate" hidden="true" parent="UIParent" toplevel="true" frameStrata="HIGH" enableMouse="true">
		<Size x="703" y="606" />
		<Anchors>
			<Anchor point="CENTER" x="0" y="0" />
		</Anchors>
		<Frames>
			<Button name="$parentTab1" inherits="CollectionsJournalTab" id="1" text="MOUNTS">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="BOTTOMLEFT" x="11" y="2" />
				</Anchors>
			</Button>
			<Button name="$parentTab2" inherits="CollectionsJournalTab" id="2" text="PET_JOURNAL">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentTab1" relativePoint="RIGHT" x="-16" y="0" />
				</Anchors>
			</Button>
			<Button name="$parentTab3" inherits="CollectionsJournalTab" id="3" text="TOY_BOX">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentTab2" relativePoint="RIGHT" x="-16" y="0" />
				</Anchors>
			</Button>
			<Button name="$parentTab4" inherits="CollectionsJournalTab" id="4" text="HEIRLOOMS">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentTab3" relativePoint="RIGHT" x="-16" y="0" />
				</Anchors>
			</Button>
			<Button name="$parentTab5" inherits="CollectionsJournalTab" id="5" text="WARDROBE">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentTab4" relativePoint="RIGHT" x="-16" y="0" />
				</Anchors>
			</Button>
			<Button name="$parentTab6" inherits="CollectionsJournalStablesTab" parent="CollectionsJournal" id="6" text="STABLES">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentTab5" relativePoint="RIGHT" x="-16" y="0" />
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad function="Frame2_OnLoad">

			</OnLoad>
			<OnShow function="CollectionsJournal_OnShow">
