<Ui>

    <Frame name="ProtoformSynthesisFieldJournalReagentButtonTemplate" virtual="true">
        <Size x="64" y="16"/>
        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon" file="Interface\Icons\inv_misc_celestial map">
                    <Size x="16" y="16"/>
                    <Anchors>
                        <Anchor point="LEFT"/>
                    </Anchors>
                    <TexCoords left="0.075" right="0.925" top="0.075" bottom="0.925"/>
                </Texture>
                <MaskTexture parentKey="CircleMask" file="Interface\CharacterFrame\TempPortraitAlphaMask">
                    <Size x="16" Y="16"/>
                    <Anchors>
                        <Anchor point="LEFT"/>
                    </Anchors>
                    <MaskedTextures>
                        <MaskedTexture childKey="Icon"/>
                    </MaskedTextures>
                </MaskTexture>
                <FontString parentKey="Text" inherits="GameFontHighlightSmall" text="0/300">
                    <Anchors>
                        <Anchor point="LEFT" x="20" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="OVERLAY">
                <!-- thin gold border around button.Texture -->
                <Texture parentKey="Border" file="Interface\PetBattles\PetBattleHUD">
                    <Size x="16" y="16"/>
                    <Anchors>
                        <Anchor point="LEFT"/>
                    </Anchors>
                    <TexCoords left="0.884765625" right="0.943359375" top="0.681640625" bottom="0.798828125"/>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                if self.reagentIcon then
                    self.Icon:SetTexture(self.reagentIcon)
                end
            </OnLoad>
        </Scripts>
    </Frame>

    <!-- Template for the list buttons -->
    <Button name="ProtoformSynthesisFieldJournalListTemplate" inherits="TooltipBorderBackdropTemplate" clipChildren="true" virtual="true">
        <Size x="200" y="48"/>
        <Layers>
            <Layer level="BORDER">
                <Texture parentKey="Icon" file="Interface\Icons\INV_Misc_QuestionMark">
                    <Size x="42" y="42"/>
                    <Anchors>
                        <Anchor point="LEFT" x="4" y="0"/>
                    </Anchors>
                    <TexCoords left="0.075" right="0.925" top="0.075" bottom="0.925"/>
                </Texture>
                <MaskTexture parentKey="IconMask" file="Interface\Common\common-iconmask">
                    <Size x="42" Y="42"/>
                    <Anchors>
                        <Anchor point="LEFT" x="4" y="0"/>
                    </Anchors>
                    <MaskedTextures>
                        <MaskedTexture childKey="Icon"/>
                    </MaskedTextures>
                </MaskTexture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="Name" inherits="GameFontNormal" text="Archetype of Petness" justifyH="LEFT" wordwrap="false">
                    <Anchors>
                        <Anchor point="LEFT" x="48" y="12"/>
                        <!-- <Anchor point="TOPRIGHT" x="-8" y="-10"/> -->
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame parentKey="MoteButton" inherits="ProtoformSynthesisFieldJournalReagentButtonTemplate">
                <KeyValues>
                    <KeyValue key="reagentIcon" value="Interface\Icons\inv_progenitor_protoformsynthesis"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="48" y="6"/>
                </Anchors>
            </Frame>
            <Frame parentKey="GlimmerButton" inherits="ProtoformSynthesisFieldJournalReagentButtonTemplate">
                <KeyValues>
                    <KeyValue key="reagentIcon" value="Interface\Icons\spell_progenitor_orb2"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.MoteButton" relativePoint="RIGHT"/>
                </Anchors>
            </Frame>
            <Frame parentKey="LatticeButton" inherits="ProtoformSynthesisFieldJournalReagentButtonTemplate">
                <KeyValues>
                    <KeyValue key="reagentIcon" value="Interface\Icons\inv_misc_celestial map"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.GlimmerButton" relativePoint="RIGHT"/>
                </Anchors>
            </Frame>
        </Frames>
        <Scripts>
            <OnShow>
                self:SetBackdropBorderColor(0.3,0.3,0.3)
            </OnShow>
            <OnEnter>
                ProtoformSynthesisFieldJournal.ListButtonOnEnter(self)
            </OnEnter>
            <OnLeave>
                ProtoformSynthesisFieldJournal.ListButtonOnLeave(self)
            </OnLeave>
            <OnClick>
                ProtoformSynthesisFieldJournal.ListButtonOnClick(self,button)
            </OnClick>
        </Scripts>
    </Button>

    <!-- Main frame -->
    <Frame name="ProtoformSynthesisFieldJournal" parent="UIParent" movable="true" resizable="true" toplevel="true" clampedToScreen="true" inherits="BasicFrameTemplate" hidden="true">
        <Size x="300" y="400"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Frames>
            <Frame parentKey="Bottom" inherits="InsetFrameTemplate">
                <Size x="0" y="24"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="4" y="5"/>
                    <Anchor point="BOTTOMRIGHT" x="-30" y="5"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString parentKey="Note" inherits="GameFontNormalSmall" text="Only reagents in bags or reagent bank are counted" wordwrap="false">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="4" y="-4"/>
                                <Anchor point="BOTTOMRIGHT" x="-4" y="4"/>
                            </Anchors>
                            <Color r="0.65" g="0.65" b="0.65"/>
                        </FontString>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnLoad>
                        self.Bg:SetDrawLayer("BACKGROUND",1)
                    </OnLoad>
                </Scripts>
            </Frame>
            <Button parentKey="ResizeGrip">
                <Size x="16" y="16"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" x="-3" y="2"/>
                </Anchors>
                <Scripts>
                    <OnMouseDown>
                        self:GetParent():StartSizing()
                    </OnMouseDown>
                    <OnMouseUp>
                        self:GetParent():StopMovingOrSizing()
                    </OnMouseUp>
                </Scripts>
                <NormalTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Up"/>
                <HighlightTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Highlight"/>
                <PushedTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Down"/>
            </Button>
            <ProtoformSynthesisFieldJournalAutoScrollFrame parentKey="List">
                <Size x="280" y="503"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="4" y="-24"/>
                    <Anchor point="BOTTOMRIGHT" x="-6" y="31"/>
                </Anchors>
            </ProtoformSynthesisFieldJournalAutoScrollFrame>
        </Frames>
        <Layers>
            <Layer level="BACKGROUND">
                <FontString parentKey="HiddenNameFontString" inherits="GameFontNormal" hidden="true"/>
                <FontString parentKey="HiddenReagentFontString" inherits="GameFontNormalSmall" hidden="true"/>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                self:RegisterEvent("PLAYER_LOGIN")
            </OnLoad>
            <OnEvent>
                self:OnEvent(event,...)
            </OnEvent>
            <OnShow>
                self:OnShow()
            </OnShow>
            <OnHide>
                self:OnHide()
            </OnHide>
            <OnMouseDown>
                self:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>
    </Frame>

    <Script file="ProtoformSynthesisFieldJournal.lua"/>

</Ui>
